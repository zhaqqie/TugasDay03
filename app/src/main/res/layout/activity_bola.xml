<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:gravity="center"
        android:background="#EADFB4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SILAHKAN PILIH BOLA UNTUK MELIHAT DESKRIPSI"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Bola Golf"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="200dp"
            android:layout_height="249dp"
            android:layout_margin="20dp"
            android:paddingBottom="100dp"
            android:src="@drawable/bolagolf" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Bola Kaki"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/img2"
            android:layout_width="200dp"
            android:layout_height="241dp"
            android:paddingBottom="100dp"
            android:src="@drawable/bolakaki" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Bola Takraw"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/img3"
            android:layout_width="200dp"
            android:layout_height="223dp"
            android:paddingBottom="100dp"
            android:src="@drawable/bolatakraw" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Bola Tennis"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="129dp"
            android:layout_height="220dp"
            android:layout_margin="20dp"
            android:paddingBottom="100dp"
            android:src="@drawable/bolatenis" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Bola Voli"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/img5"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingBottom="100dp"
            android:src="@drawable/bolavoli" />

    </LinearLayout>

</ScrollView>